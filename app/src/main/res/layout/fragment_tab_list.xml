<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray">

    <!-- 筛选 -->
    <LinearLayout
        android:id="@+id/top_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:id="@+id/top_filter_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top_filter_customer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全类客户"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_down_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_filter_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top_filter_order_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合排序"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_down_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_filter_bd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/top_filter_bd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部销售"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_down_arrow" />
        </LinearLayout>
    </LinearLayout>

    <!-- 搜索 -->
    <RelativeLayout
        android:id="@+id/activity_private_library_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/top_filter_layout"
        android:background="@color/activity_bg_gray"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <requestFocus />

        <EditText
            android:id="@+id/private_library_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_edit_bg"
            android:hint="搜索企业名"
            android:imeOptions="actionSearch"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:textColorHint="#e6e6e6"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:src="@drawable/search_icon" />

        <ImageView
            android:id="@+id/private_library_clear_search"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/search_flag_delete" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/pull_2_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_private_library_relative">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>