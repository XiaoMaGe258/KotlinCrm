<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_gray"
    >

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_sliding_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        tl:tl_textSelectColor="@color/app_green"
        tl:tl_textUnselectColor="@color/text_gray_normal"
        tl:tl_tab_space_equal="true"
        tl:tl_textBold="SELECT"
        tl:tl_textsize="16sp"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_color="@color/app_green"
        tl:tl_indicator_width_equal_title="true"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_tab_item_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tl_sliding_tab" />

</RelativeLayout>