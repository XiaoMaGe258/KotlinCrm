<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center_horizontal"
    android:background="@drawable/grid_view_item_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/grid_view_item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp" />

        <View
            android:id="@+id/grid_view_item_tag_bg"
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_marginTop="22dp"
            android:layout_alignRight="@id/grid_view_item_image"
            android:background="@drawable/round_red_90_bg"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/grid_view_item_tag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_alignLeft="@id/grid_view_item_tag_bg"
            android:layout_alignRight="@id/grid_view_item_tag_bg"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/white"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/grid_view_item_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字" />

</LinearLayout>