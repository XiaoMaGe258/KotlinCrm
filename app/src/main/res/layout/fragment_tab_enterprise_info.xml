<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/customer_info_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="企业名称"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="北京涌金冠泰科技有限公司" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_area_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="区域"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="北京市海淀区" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="地址"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="青东商务区C座11层" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_contact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="联系人"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="李经理" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_job_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="职位"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="HR经理" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_policymakers_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
