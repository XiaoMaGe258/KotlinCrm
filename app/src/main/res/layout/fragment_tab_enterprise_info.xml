                    android:text="是否决策人"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_policymakers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="5dp"
                    android:text="否" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="联系电话"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="13651222333\n400-0613-530"
                    android:textColor="@color/app_green"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_qq_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="QQ"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="154368146" />
            </LinearLayout>
            <LinearLayout
