                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="邮箱"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="154368146@qq.com" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_business_license_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="营业执照"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_business_license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="5dp"
                    android:text="点击查看"
                    android:textColor="@color/app_green"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_size_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="企业规模"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="5dp"
                    android:text="15人以下" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_character_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="公司性质"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_character"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="5dp"
                    android:text="私企" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_introduce_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="企业介绍"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="北京涌金冠泰科技有限公司，北京涌金冠泰科技有限公司，北京涌金冠泰科技有限公司北京涌金冠泰科技有限公司。" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_website_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="官方网站"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="5dp"
                    android:text="http://www.xiaolaoyiguan.com"
                    android:autoLink="web"
                    android:textColorLink="@color/app_green"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_createtime_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="创建时间"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_createtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="5dp"
                    android:text="2016-03-26" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_comments_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="right"
                    android:text="备注"
                    android:textColor="@color/salary_gray"
                    />

                <TextView
                    android:id="@+id/customer_info_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginLeft="5dp"
                    android:text="北京涌金冠泰科技有限公司, 北京涌金冠泰科技有限公司, 北京涌金冠泰科技有限公司" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_logo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司logo"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#e6e6e6"
                        android:padding="1dp">

                        <ImageView
                            android:id="@+id/customer_info_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:background="@color/white"
                            android:src="@drawable/ic_self_photo_plus" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/customer_info_photos_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司环境"
                    android:paddingLeft="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <!--<com.jianzhibao.crm.mobile.view.MyGridView-->
                        <!--android:id="@+id/customer_info_photos"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:horizontalSpacing="5dp"-->
